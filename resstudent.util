#!/bin/bash

# Enter a student's name in <first initial>.<last name> format, and this will show if they have any numbers after their name

valo=$(ls -a1 /home/students | grep "^${1/\./\\.}");
val=$(echo -ne "${valo/
/, }")
if [ -z "$val" ];
then
	echo -e "\e[01;31m$1 is not found\e[00m";
	exit 1;
else
	echo -e "\e[01;32m$1 is $val\e[00m";
	exit 0;
fi

